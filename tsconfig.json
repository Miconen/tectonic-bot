{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "skipLibCheck": false,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src",
        "paths": {
            "@commands/*": [
                "commands/*"
            ],
            "@utils/*": [
                "utils/*"
            ],
            "@database/*": [
                "database/*"
            ],
            "@guards/*": [
                "guards/*"
            ],
            "@requests/*": [
                "requests/*"
            ]
        }
    },
    "exclude": [
        "build",
        "node_modules"
    ]
}
